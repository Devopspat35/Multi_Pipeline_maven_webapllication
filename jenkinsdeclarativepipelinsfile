pipeline{
 agent any  
   tools {
      maven 'maven3.9.6'
   }
     stages{
      stage('1.CloneCode'){
        steps{
         sh  "echo cloning the latest app version"
         git 'https://github.com/Devopspat35/Multi_Pipeline_maven_webapllication.git'
        }
    }
     stage('2.mvnBuild'){
       steps{
       sh "mvn clean package"
        }
     }
     stage('3.CodeQuality'){
       steps{
         sh "mvn sonar:sonar"
       }
     }
        stage('4.UploadArtifacts'){
      steps{
         sh "mvn deploy"       
       }
     }
         stage('5.Deploy2UAT'){
      steps{
        sh "echo Deployment is ready for the client review"
deploy adapters: [tomcat9(credentialsId: 'tomcatcredentials', path: '', url: 'http://18.223.149.41:3535/')], contextPath: null, war: 'target/*war'
        }
     }
     stage('6.ManualApproval'){
      steps{
       sh "echo Please Review and confirm within 7 days"
       timeout(time:7, unit:'DAYS'){
       input message: 'Application ready for deployment, Please review and approve'     
         }
        }
     }
    stage('7.Deploy2Prod'){
      steps{
deploy adapters: [tomcat9(credentialsId: 'tomcatcredentials', path: '', url: 'http://18.223.149.41:3535/')], contextPath: null, war: 'target/*war'
      }
    }
  }
    post{
        always{
       emailext body: '''Hi Team.

      Build sutus 
      Pat.a.foncha''', recipientProviders: [buildUser(), contributor(), developers(), upstreamDevelopers()], subject: 'Build status', to: 'patemf2021@yahoo.com'     
        }
        success{
           emailext body: '''Hi Team.

        Build succeeded
      Pat.a.foncha''', recipientProviders: [buildUser(), contributor(), developers(), upstreamDevelopers()], subject: 'Build status', to: 'patemf2021@yahoo.com' 
        }
        failure{
            emailext body: '''Hi Team.

        Build failed
       Pat.a.foncha''', recipientProviders: [buildUser(), contributor(), developers(), upstreamDevelopers()], subject: 'Build status', to: 'patemf2021@yahoo.com'
        }
     }
  }

